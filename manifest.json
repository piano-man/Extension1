{
  "manifest_version": 2,

  "name": "Spoiler Alert",
  "description": "This extension searches for text on a particular page",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}